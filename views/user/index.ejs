<!DOCTYPE html>
<html>
<head>
	<title>Hex Colors</title>
	<meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1">
    <script type="text/javascript" src="../js/vendor/bootstrap-3.3.5-dist/js/bootstrap.min.js"></script>

    <link type="text/css" rel="stylesheet" href="../js/vendor/bootstrap-3.3.5-dist/css/bootstrap.min.css">
	<!-- <link rel="stylesheet" type="text/css" href="../css/main.css"> -->
	<link rel="stylesheet" type="text/css" href="../css/styles.css">

	<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
	<script type="text/javascript" src="../js/index.js"></script>
</head>
<body id="index" class="container">

<div class="row navigationRow noMargin">
	<nav>
		<section id="logoContainer" class="col-md-4 col-sm-4 col-xs-6">
			<a href="/"><img src="../img/hashtag.png"></a>
		</section>
	<!-- 	<section id="hexColorInputContainer">
			<input id="hexColorInput" type="text">
		</section> -->
		<section id="palettesContainer" class="navTitles col-md-4 col-sm-4 col-xs-6">
			<a href="/palettes">Palettes</a>
		</section>
		<section id="signUp" class="navTitles col-md-2 col-sm-2 col-xs-6">
			<a>Sign Up</a>

			<div id="signUpOverlay">
				<form action="/users" method="POST" id="signUpForm">
					<input type="text" name="username" placeholder="username">
					<input type="text" name="email" placeholder="email">
					<input type="password" name="password" placeholder="password"><br>
					<button>Sign Up</button>
				</form>
			</div>
		</section>
		<section id="logIn" class="navTitles col-md-2 col-sm-2 col-xs-6">
			<a>Log In</a>

			<div id="logInOverlay">
				<form action="/users/login" method="POST" id="logInForm">
					<input type="text" name="email" placeholder="email">
					<input type="password" name="password" placeholder="password"><br>
					<button>Log In</button>
				</form>
			</div>

		</section>
	</nav>
</div> <!-- END OF row .navigationRow -->




<div class="row noMargin">
<% for (var i = 0; i<colors.length; i++){ %>
	<div id="<%=colors[i].hex%>" class="col-md-1 col-sm-2 col-xs-12 indexHexColor" style="background-color:<%=colors[i].hex%>">
		<p class="indexHexColorCode"><%=colors[i].hex%></p> <!-- NEED THIS TO BE ACCESSED IN CSS? -->
	</div>
<% } %>



</body>
</html>